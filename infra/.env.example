# Host/IP where this stack is exposed
INFRA_HOST=localhost

# Elasticsearch HTTP port on the host
INFRA7_ES_PORT=9200
INFRA8_ES_PORT=9201

# Kibana HTTP port on the host
INFRA7_KIBANA_PORT=5601
INFRA8_KIBANA_PORT=5602

# Elasticsearch heap size in GB
# Adjust based on available RAM (e.g. 4G, 8G)
ES7_HEAP_SIZE_GB=4G
ES8_HEAP_SIZE_GB=8G

# Cluster / node naming
ES7_CLUSTER_NAME=cti-es7
ES7_NODE_NAME=cti-es7-1
ES8_CLUSTER_NAME=cti-es8
ES8_NODE_NAME=cti-es8-1
