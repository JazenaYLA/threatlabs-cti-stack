# Shuffle Configuration
COMPOSE_PROJECT_NAME=shuffle

# -- PORTS
SHUFFLE_APP_PORT=3001
SHUFFLE_BACKEND_PORT=5002
FRONTEND_PORT_HTTPS=3443

# -- HOSTNAMES
BACKEND_HOSTNAME=shuffle-backend
# This is where the user accesses Shuffle (e.g. localhost or IP)
OUTER_HOSTNAME=localhost

# -- VERSIONS
SHUFFLE_VERSION=2.2.0
DOCKER_API_VERSION=1.44
OPENSEARCH_VERSION=2.11.0

# -- OPENSEARCH
SHUFFLE_OPENSEARCH_URL=https://shuffle-opensearch:9200
# Strong password for Opensearch 3.2.0+ (Must contain uppercase, lowercase, digit, special char)
SHUFFLE_OPENSEARCH_PASSWORD=change_this_password
SHUFFLE_OPENSEARCH_JAVA_OPTS=-Xms2048m -Xmx2048m
OPENSEARCH_INITIAL_ADMIN_PASSWORD=ChangeMe123!
SHUFFLE_OPENSEARCH_USERNAME=admin
SHUFFLE_OPENSEARCH_INDEX_PREFIX=
SHUFFLE_OPENSEARCH_APIKEY=
SHUFFLE_OPENSEARCH_CLOUDID=
SHUFFLE_OPENSEARCH_PROXY=

# -- ENCRYPTION (AES Key for encryption)
# Generate with: openssl rand -hex 32
SHUFFLE_ENCRYPTION_MODIFIER=ChangeMeArgument

# -- SSL VERIFICATION
SHUFFLE_SKIPSSL_VERIFY=true
SHUFFLE_OPENSEARCH_SKIPSSL_VERIFY=true

# -- PROXY
HTTP_PROXY=
HTTPS_PROXY=
SHUFFLE_PASS_WORKER_PROXY=TRUE
SHUFFLE_PASS_APP_PROXY=TRUE

# -- EXECUTION & SCALING
SHUFFLE_ORBORUS_EXECUTION_CONCURRENCY=7
SHUFFLE_APP_REPLICAS=3
SHUFFLE_APP_SDK_TIMEOUT=300
SHUFFLE_RERUN_SCHEDULE=300
SHUFFLE_DISABLE_RERUN_AND_ABORT=false
SHUFFLE_MAX_EXECUTION_DEPTH=20

# -- LOGGING & METRICS
SHUFFLE_STATS_DISABLED=true
SHUFFLE_LOGS_DISABLED=true
SHUFFLE_CHAT_DISABLED=false
SHUFFLE_ELASTIC=true

# -- CLEANUP
SHUFFLE_CONTAINER_AUTO_CLEANUP=true
SHUFFLE_PROTECTED_CLEANUP_DISABLED=true
CLEANUP=false

# -- PATHS
SHUFFLE_APP_HOTLOAD_LOCATION=./shuffle-apps
SHUFFLE_FILE_LOCATION=./shuffle-files
DB_LOCATION=./shuffle-database

# -- MISC
ENVIRONMENT_NAME=Shuffle
ORG_ID=Shuffle

TZ=UTC
